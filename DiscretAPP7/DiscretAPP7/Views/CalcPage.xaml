<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiscretAPP7.Views.CalcPage"
             Title="Calculadora"
             BackgroundImage="weeks_background">
    <ContentPage.Content>
        <StackLayout>
            <Grid Padding="15,5,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="PC1 10%" VerticalOptions="Center" Font="18" TextColor="Black" />
                <Label Grid.Row="1" Grid.Column="0" Text="EA 15%" VerticalOptions="Center"  Font="18" TextColor="Black"/>
                <Label Grid.Row="2" Grid.Column="0" Text="PC2 10%" VerticalOptions="Center" Font="18" TextColor="Black" />
                <Label Grid.Row="3" Grid.Column="0" Text="TA 15%" VerticalOptions="Center"  Font="18" TextColor="Black"/>
                <Label Grid.Row="4" Grid.Column="0" Text="TF 20%" VerticalOptions="Center"  Font="18" TextColor="Black"/>
                <Label Grid.Row="5" Grid.Column="0" Text="EB 30%" VerticalOptions="Center"  Font="18" TextColor="Black"/>
                <Entry x:Name="N1" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric" Grid.Row="0" Grid.Column="1"          FontSize="18" TextColor="Black" />
                <Entry x:Name="N2" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric"  Grid.Row="1" Grid.Column="1"         FontSize="18" TextColor="Black"   />
                <Entry x:Name="N3" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric"  Grid.Row="2" Grid.Column="1"         FontSize="18" TextColor="Black"     />
                <Entry x:Name="N4" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric"  Grid.Row="3" Grid.Column="1"         FontSize="18" TextColor="Black"     />
                <Entry x:Name="N5" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric"  Grid.Row="4" Grid.Column="1"         FontSize="18" TextColor="Black"      />
                <Entry x:Name="N6" FontFamily="{StaticResource BoldFont}" Keyboard="Numeric"  Grid.Row="5" Grid.Column="1"         FontSize="18" TextColor="Black"         />
            </Grid>

            <Button Text="Calcular" x:Name="Calc" BorderRadius="27" BackgroundColor="Red" Margin="30" TextColor="White" FontAttributes="Bold" FontFamily="{StaticResource BoldFont}"/>
            <Label
                Font="25"
                TextColor="Red"
                FontAttributes="Bold"
                Text="Tu nota se desplegara aquí!"
                FontFamily="{StaticResource BoldFont}"
                VerticalOptions="CenterAndExpand" 
                x:Name="Nota"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>